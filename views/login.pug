doctype html
html
  head
    title blogApp
    link(rel='stylesheet', type='text/css', href='../static/css/stylesheet.css')
    link(href="https://fonts.googleapis.com/css?family=Josefin+Sans" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css?family=Cabin|Josefin+Sans" rel="stylesheet")
  body
    wrapper
      nav
        ul
          li
            a(href='/') Home
        
          li
            a(href='/login') Log In
          li
            a(href='/signup') Sign Up

  h1  Login Page
    
  form#msform(action='/login', method='post')
    fieldset
      h2 Hi There!
      h3 Log in here:
      input(id = "email",type='email', name='email', placeholder='Email')
      |  
      input(id = "password", type='password', name='password', placeholder='Password')
      input(class="submitbutton", type='submit', name='submit', value='Login')

  h3#error-message
    
    script(src="../static/js/jquery-3.1.1.js")
    script(src="../static/js/custom.js")

    //- DATA VALIDATION
    script.
      $(document).ready(function(){
      $('.submitbutton').click(function(event){
        if($('#email').val().trim().length === 0 || $('#password').val().trim().length ===0){
          event.preventDefault();
          $('#error-message').html("Your username or password is empty");
          
        }
      });
      });
